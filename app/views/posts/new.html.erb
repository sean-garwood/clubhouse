<h1>New post</h1>
<p>Create a new post.</p>
<%= form_with model: @post, local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Post' %>
  </div>
<% end %>
